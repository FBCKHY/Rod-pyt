# 生产环境配置
# 请根据实际情况修改这些值

# 环境
NODE_ENV=production

# 服务器配置
PORT=3001
HOST=0.0.0.0

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rongdian_db
DB_USER=rongdian
DB_PASSWORD=your_secure_password_change_this

# JWT配置
JWT_SECRET=your_jwt_secret_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=7d

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# 日志级别
LOG_LEVEL=info

# CORS配置
CORS_ORIGIN=https://your-domain.com
